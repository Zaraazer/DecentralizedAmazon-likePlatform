# Blockchain Network Configuration
PRIVATE_KEY=your_private_key_here

# Core Blockchain Network URLs
CORE_TESTNET2_RPC=https://rpc.test2.btcs.network
CORE_MAINNET_RPC=https://rpc.coredao.org

# Other Network URLs (for future expansion)
ETHEREUM_MAINNET_URL=https://mainnet.infura.io/v3/your_infura_project_id
ETHEREUM_GOERLI_URL=https://goerli.infura.io/v3/your_infura_project_id
POLYGON_URL=https://polygon-mainnet.infura.io/v3/your_infura_project_id

# Block Explorer API Keys
CORE_SCAN_API_KEY=your_core_scan_api_key_here
ETHERSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# IPFS Configuration (for storing product images and metadata)
IPFS_PROJECT_ID=your_ipfs_project_id_here
IPFS_PROJECT_SECRET=your_ipfs_project_secret_here
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_API_KEY=your_pinata_secret_api_key_here

# Contract Addresses (update after deployment)
CONTRACT_ADDRESS_CORE_TESTNET2=
CONTRACT_ADDRESS_CORE_MAINNET=
CONTRACT_ADDRESS_ETHEREUM_MAINNET=
CONTRACT_ADDRESS_POLYGON=

# Platform Configuration
PLATFORM_FEE_PERCENTAGE=2
MIN_PRODUCT_PRICE=1000000000000000
MAX_PRODUCT_QUANTITY=10000

# Database Configuration (if using off-chain indexing)
DATABASE_URL=your_database_connection_string_here
REDIS_URL=your_redis_connection_string_here

# Frontend Configuration
REACT_APP_CONTRACT_ADDRESS=${CONTRACT_ADDRESS_CORE_TESTNET2}
REACT_APP_NETWORK_ID=1116
REACT_APP_RPC_URL=https://rpc.test2.btcs.network
REACT_APP_EXPLORER_URL=https://scan.test2.btcs.network

# Development Settings
NODE_ENV=development
PORT=3000
DEBUG=true
